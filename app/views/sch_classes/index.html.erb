
<h1>班级管理</h1>

<%= link_to '新建班级', new_sch_class_path %>

<p>
<table>
	<tr>
		<th>年级</th>
		<th>班级</th>
		<th>班主任</th>
		<th colspan="3"></th>
	</tr>
	<% @sch_classes.each do |sch_class| %>
		<tr>
			<td><%= sch_class.title %></td>
			<td><%= sch_class.text %></td>
			<td><%= link_to '详情', sch_class_path(sch_class) %></td>
			<td><%= link_to '删除', sch_class_path(sch_class),
				method: :delete,
				data: { confirm: '确认删除此班级?' } %></td>
		</tr>
	<% end %>
</table>
</p>
