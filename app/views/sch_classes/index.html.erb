<div class="row-fluid">
	<div class="col-xs-2 span2">
		<h2>班级管理</h2>
	</div>
	<div class="col-xs-7 span7">
		<div class="row">
			<div class="span12">
				<%= render 'error' %>
			</div>
		</div>
		<div class="row-fluid">
		<%= paginate @sch_classes,params['page'].to_i,"?page=%d" do |paged_classes| %>
			<table class="table">
				<tr>
					<th>年级</th>
					<th>班级</th>
					<th>班主任</th>
					<th colspan="3"></th>
				</tr>
				<% paged_classes.each do |sch_class| %>
					<tr>
						<td><%= sch_class.grade %></td>
						<td><%= sch_class.class_number %></td>
						<td><%= sch_class.teacher %></td>
						<td><%= link_to '详情', sch_class_path(sch_class) %></td>
						<td><%= link_to '删除', sch_class_path(sch_class),
							method: :delete,
							data: { confirm: '确认删除此班级?' } %></td>
					</tr>
				<% end %>
			</table>
		<% end %>
		</div>
	</div>
	<div class="col-xs-3 span3">
		<div class="row-fluid">
			<div class="span12">
				<h4>新建班级</h4>
				<%= render 'form' %>
			</div>
		</div>
	</div>
</div>
