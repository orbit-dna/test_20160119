<div class="row-fluid">
	<div class="col-xs-2 span2">
		<h2>班级信息</h2>
		<hr />
		<%= link_to "班级目录", sch_classes_path %>
	</div>
	<div class="col-xs-10 span10">
		<div class="row-fluid">
			<div class="span12">
				<%= render 'error' %>
			</div>
		</div>
		<div class="row-fluid">
			<div class="span12">
				<%= form_for @sch_class do |f| %>
					<%= f.label "#{@sch_class.grade}年级 #{@sch_class.class_number}班" %>
					&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
					<%= f.label '班主任：' %>
					<%= f.text_field :teacher %>
					<%= f.submit "提交更改" %>
					<%= link_to "还原", sch_class_path %>
				<% end %>
			</div>
		</div>
		<div class="row-fluid">
			<h3>本班学生列表</h3>
			<%= render 'students/student_list' %>
		</div>
