<div class="row-fluid">
	<div class="col-xs-2 span2">
		<h2>User管理</h2>
	</div>
	<div class="col-xs-7 span7">
		<div class="row">
			<div class="span12">
				<%= render 'error' %>
			</div>
		</div>
		<div class="row-fluid">
		<table class="table">
			<tr>
				<th>id</th>
				<th>login</th>
				<th>name</th>
				<th>privilege</th>
				<th>status</th>
				<th colspan="3"></th>
			</tr>
			<% @users.each do |user| %>
				<tr>
					<td><%= user.id %></td>
					<td><%= user.login %></td>
					<td><%= user.name %></td>
					<td><%= user.privilege %></td>
					<td><%= user.status %></td>
					<td><%= link_to '详情', user_path(user) %></td>
					<td><%= link_to '删除', user_path(user),
						method: :delete,
						data: { confirm: '确认删除此User?' } %></td>
				</tr>
			<% end %>
		</table>
		</div>
	</div>
	<div class="col-xs-3 span3">
		<div class="row-fluid">
			<div class="span12">
				<h4>新建User</h4>
				<%= render 'form' %>
			</div>
		</div>
	</div>
</div>
